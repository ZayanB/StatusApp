<Window x:Class="StatusApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatusApp"
        mc:Ignorable="d"
        Title="SafeCopy" Height="450" Width="800"
        Icon="pack://application:,,,/logoIcon.ico">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition  Height="10*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#00a99d"/>
        <Label Content="SafeCopy" FontFamily="Montserrat, Helvetica, Arial, Verdana, sans-serif" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>



        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Label Content="Source Folder:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="5,0,0,0"/>
                <Label Grid.Column="1" Content="{Binding ConfigData.sourceFolder}" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <Label Grid.Row="1" Content="Backup Folder:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="5,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding ConfigData.backupFolder}" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" />

                <Label Grid.Row="2" Content="Destination Folders:" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" x:Name="DestinationLabelsPanel" />


            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Content="Status" FontSize="15" HorizontalAlignment="Left" Margin="0,10,0,0" />
                <Label Grid.Row="1" x:Name="txtBackupCount" FontSize="14" HorizontalAlignment="Left" />
                <Label Grid.Row="2" x:Name="txtCopyCount" FontSize="14" HorizontalAlignment="Left" />
                <Label Grid.Row="3" x:Name="txtReplacedCount" FontSize="14" HorizontalAlignment="Left"/>
                <Label Grid.Row="4" x:Name="txtRollbackStatus" FontSize="14" HorizontalAlignment="Left" />
            </Grid>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button  Content="Start" FontSize="15" Name="runBtn"   Click="runBtn_Click" Width="300" Height="50" />

            <Button Grid.Column="1" FontSize="15" Content="Rollback" x:Name="showRollbackBtn" Click="showRollbackBtn_Click" Width="300" Height="50"/>

            <Popup x:Name="rollbackPopup" Placement="Center" VerticalOffset="-200" StaysOpen="False"  AllowsTransparency="True">
                <Grid Background="#00a99d" Width="280" Height="200">
                    <Grid.RowDefinitions>

                        <RowDefinition />
                        <RowDefinition />

                    </Grid.RowDefinitions>

                    <ComboBox  x:Name="BackupDropdown" Margin="25,10,25,0" FontSize="15" Height="30"/>

                    <Button Grid.Row="1" Content="RollBack" FontSize="15" Name="rollbackBtn" Click="rollbackBtn_Click" Margin="25,0,25,10" Height="30"/>

                </Grid>

            </Popup>






        </Grid>

    </Grid>
</Window>
