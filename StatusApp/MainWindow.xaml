<Window x:Class="StatusApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatusApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition  Height="10*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#00a99d"/>
        <Label Content="SafeCopy" FontFamily="Montserrat, Helvetica, Arial, Verdana, sans-serif" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>



        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Label Content="Source Folder:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="5,0,0,0"/>
                <Label Content="{Binding ConfigData.sourceFolder}" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Label Grid.Row="1" Content="Backup Folder:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="5,0,0,0"/>
                <Label Grid.Row="1"  Content="{Binding ConfigData.backupFolder}" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Grid Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="70*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Destination Folders:" Margin="5,0,0,0" FontSize="15" />
                    <StackPanel Grid.Column="1" x:Name="DestinationLabelsPanel" />
                </Grid>
            </Grid>

            <Label Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Status" FontSize="15"/>
            
            <Label Grid.Column="1" x:Name="txtBackupCount" Margin="0,20,0,0" FontSize="14"/>
            <Label Grid.Column="1" x:Name="txtCopyCount" Margin="0,35,0,0" FontSize="14"/>
            <Label Grid.Column="1" Margin="0,50,0,0" HorizontalAlignment="Center" FontSize="14" x:Name="statusText"/>
            <Label Grid.Column="1" Margin="0,65,0,0" HorizontalAlignment="Center" FontSize="14" x:Name="copyStatusText"/>

        </Grid>
        <Button  Grid.Row="2" Content="Start" FontSize="15" Name="runBtn" Margin="200,20,200,20"  Click="runBtn_Click"/>
    </Grid>
</Window>
